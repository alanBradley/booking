<p id="notice"><%= notice %></p>

<h1>Listing Reservations</h1>

<table>
  <thead>
    <tr>
      <th>Pickup</th>
      <th>Collection</th>
      <th>Pax</th>
      <th>Client</th>
      <th>Driver</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.zip(@clients, @drivers).each do |reservation, client, driver| %>
      <tr>
        <td><%= reservation.pickup %></td>
        <td><%= reservation.collection %></td>
        <td><%= reservation.pax %></td>
        <td><%= reservation.client.fname %></td>
        <td><%= reservation.driver.fname %></td>
        <td><%= link_to 'Show', reservation %></td>
        <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
        <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

